{% extends '@SbSAdminLTE/Layout/base.html.twig' %}
{% block title %}Employees{% endblock %}
{% block admin_lte_logo %}
                    <a href="" class="logo">
                        <span class="logo-mini"><b>W</b>C</span>
                        <img src="../../images/Logo-Wincom.png" class="img-circle">
                    </a>
{% endblock %}
{% block admin_lte_sidebar %}
 
<ul class="sidebar-menu tree" data-widget="tree">
        <li class="header">MAIN NAVIGATION</li>
        <li><a href="{{ path('product_index') }}"><i class="fa fa-product-hunt"></i> <span>Produits</span></a></li>
        <li><a href="{{ path('employees_index') }}"><i class="fa fa-users text-yellow"></i> <span>Employees</span></a></li>
        <li><a href="{{ path('transactions_index') }}"><i class="fa fa-credit-card-alt text-green"></i> <span>Transactions</span></a></li>
        <li><a href="{{ path('clients_index') }}"><i class="fa fa-user-circle-o text-aqua"></i> <span>Clients</span></a></li>
        <li><a href="{{ path('accounts_index') }}"><i class="fa fa-circle-o text-red    " aria-hidden="true"></i> <span>Comptes</span></a></li>
                   
{% endblock %}
{% block header_content %}{% endblock %}
{% block page_content %}
    <h1>Liste des employés</h1>
    <form  action="{{ path('fos_user_registration_register') }}" method="post">
    <input type="text" name='path' style="display : none;" value="employees">
    <input type="submit" value="Ajouter Employé" class="btn btn-app" style="float: right;"/>
    </form>
    {# <input type="submit" value="Create" class="btn btn-success" style="float: right;">  <i class="fa fa-plus"></i>Add Employee</input>
    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-app" style="float: right;">
    </a> #}

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>

                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input class="form-control pull-right" name="table_search" placeholder="Search" type="text">

                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">

                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Prénom</th>
                                <th>Nom</th>
                                <th>Cin</th>
                                <th>Donner l'accès</th>
                                <th>Paiement</th>
                                <th>Transfert</th>
                                <th>Vérifier l'accès</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for employee in employees %}
                                <tr>
                                    <td>
                                        <a href="{{ path('employees_show', { 'id': employee.id }) }}">{{ employee.id }}</a>
                                    </td>
                                    <td>{{ employee.firstName }}</td>
                                    <td>{{ employee.lastName }}</td>
                                    <td>{{ employee.cin }}</td>
                                    <td>
                                        {% if employee.giveaccess %}
                                            oui
                                        {% else %}
                                            non
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if employee.payment %}
                                            oui
                                        {% else %}
                                            non
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if employee.transfert==1 %}
                                            oui
                                        {% else %}
                                            non
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if employee.verifyaccess %}
                                            oui
                                        {% else %}
                                            non
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="{{ path('employees_show', { 'id': employee.id }) }}" class="btn btn-primary">Afficher</a>
                                            <button aria-expanded="false" class="btn btn-info dropdown-toggle" data-toggle="dropdown" type="button">
                                                <span class="caret"></span>
                                                <span class="sr-only">Toggle Dropdown</span>
                                            </button>
                                            <ul class="dropdown-menu" role="menu">
                                                <li>
                                                    <a href="{{ path('employees_show', { 'id': employee.id }) }}">Afficher</a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('employees_edit', { 'id': employee.id }) }}">Modifier</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>


{% endblock %}
